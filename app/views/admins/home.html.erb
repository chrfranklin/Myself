<div class="row">
  <% if signed_in? %>
    <div class="span4"><%= render 'admins/list' %></div>
    <div class="span8">欢迎页面</div>
  <%else%>    
    <h1>Sign up</h1>
    <div class="row">
      <div class="span6 offset3">
        <%= form_for(:session, url: sessions_path) do |f| %>

          <%= f.label :email %>
          <%= f.text_field :email %>

          <%= f.label :password %>
          <%= f.password_field :password %>

          <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
        <% end %>
      </div>
    </div>
  <%end%>
</div>
